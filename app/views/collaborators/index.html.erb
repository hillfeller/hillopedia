<h1>Collaborators for <%= @wiki.title %></h1>

<table class="table">
<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td>
      <% if @wiki.users.include?(user)%>
        <%= link_to [@wiki, @wiki.collaborator_for(user)], class: 'btn btn-danger', method: :delete do %>
        <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Remove Collaborator
        <% end %>
      <% else %>
        <%= link_to wiki_collaborators_path(@wiki, user_id: user.id), class: 'btn btn-primary', method: :post do %>
        <i class="glyphicon glyphicon-star"> </i>&nbsp; Add Collaborator
        <% end %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
